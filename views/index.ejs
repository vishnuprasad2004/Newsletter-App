<html>
<%- include('./indexHead.ejs') %>
<body>

    <main>

        <div class="heading-container">
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span><br>
            <span class="heading">DailyDigest.</span>
        </div>

        <div class="container-wrapper">
            <div class="container">
                <div class="emojis">
                    <div class="emoji">🚀</div>
                    <div class="emoji">👨🏽‍💻</div>
                    <div class="emoji">🧬</div>
                    <div class="emoji">🤖</div>
                    <div class="emoji">📱</div>
                </div>
                <br>
                <a href="/"><h1 id="name" class="fancy word">@DailyDigest.</h1></a>
                <p style="font-size: 20px;">Get Smarter by reading just an Email everyday. </p>
                <p style="opacity: 0.8;font-size:15px;">DailyDigest is a short and free newletter in your inbox everyday. Get the most interesting stories and articles based on your interests.</p>
                
                <a href="/register"><button id="subscribe">Subscribe Now</button></a>
            </div>
        </div>
        <% if (message != '') { %>
            <div class="popup" id="popup">
                <%= message %>
            </div>
        <% } %>
    </main>

    <footer>
        <a href="http://github.com/vishnuprasad2004">Developer</a>
        <a href="http://github.com/vishnuprasad2004/Newsletter-App">Source Code</a>
    </footer>


    <script>
        
        let popup = document.getElementById('popup');

        // gsap
        gsap.to(".heading-container", {
            y: 400, 
            duration: 2, 
            ease: "power1.out", 
            repeat: -1, 
            yoyo: true, 
        });
        gsap.to(".emoji", {
            y:20,
            // duration:2,
            stagger:1,
            ease: "ease",
            repeat: -1,
            yoyo: true,

        });
        // loading code
        document.title = 'Loading... DailyDigest.';
        document.body.onload = () => {
            document.title = 'DailyDigest.';
        }
        // popup code
        setTimeout(()=> {
            popup.style.display = 'none';
        },5000);

        // hover effect code
        function enhance(id) {
            const element = document.getElementById(id);
            let text = element.innerText.split("");
            element.textContent = "";
            text.forEach(letter => {
                const span = document.createElement("span");
                span.className = "letter";
                span.innerText = letter;
                element.appendChild(span);
            });
        }
        enhance("name");

    </script>
</body>
</html>